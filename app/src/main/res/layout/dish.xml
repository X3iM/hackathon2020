<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DishActivity">


    <ImageView
        android:id="@+id/imageDish"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:src="@drawable/meet" />

    <TextView
        android:id="@+id/nameDish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@+id/imageDish"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:fontFamily="@font/ubuntu_medium"
        android:text="text"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/descr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameDish"
        android:layout_margin="10dp"
        android:fontFamily="@font/ubuntu_medium"
        android:layout_centerHorizontal="true"
        android:text="text"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_below="@+id/kcalText"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/ubuntu_medium"
        android:text="text"
        android:textColor="@android:color/holo_red_light"
        android:textSize="30sp" />

    <LinearLayout
        android:id="@+id/nutrition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/descr"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/protein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_medium"
            android:layout_gravity="start"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:text="text"
            android:textColor="@android:color/holo_red_light"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/fats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_medium"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="text"
            android:textColor="@android:color/holo_red_light"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/carbonohydrates"
            android:layout_width="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_medium"
            android:text="text"
            android:textColor="@android:color/holo_red_light"
            android:textSize="30sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/kcalText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nutrition"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/ubuntu_medium"
        android:layout_marginStart="40dp"
        android:gravity="start"
        android:text="@string/kcalString"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/kcal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nutrition"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="60dp"
        android:fontFamily="@font/ubuntu_medium"
        android:text="text"
        android:textColor="@color/black"
        android:textSize="18sp" />
    <Button
        android:id="@+id/order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/price"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_add_background"
        android:text="@string/btn_add"
        android:textColor="@color/white" />


    <RatingBar
        android:id="@+id/rating"
        android:layout_below="@+id/order"
        android:layout_marginTop="20dp"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:isIndicator="true"
        android:numStars="5"
        android:scaleX="3.0"
        android:scaleY="3.0"
        android:stepSize="0.1" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-1dp"
        app:itemBackground="@color/white"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/menu_navigation" />


</RelativeLayout>




