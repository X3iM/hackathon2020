<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DishActivity">


    <ImageView
        android:id="@+id/imageDish"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/meet" />

    <TextView
        android:id="@+id/nameDish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageDish"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:fontFamily="@font/ubuntu_medium"
        android:text="text"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/descr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameDish"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:fontFamily="@font/ubuntu_medium"
        android:gravity="center"
        android:text="text"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/kcal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nutrition"
        android:layout_margin="10dp"
        android:fontFamily="@font/ubuntu_medium"
        android:paddingStart="302dp"
        android:text="text"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/kcalText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nutrition"
        android:layout_margin="10dp"
        android:fontFamily="@font/ubuntu_medium"
        android:paddingStart="50dp"
        android:text="@string/kcalString"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kcal"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:fontFamily="@font/ubuntu_medium"
        android:text="text"
        android:textColor="@android:color/holo_red_light"
        android:textSize="30sp" />

    <LinearLayout
        android:id="@+id/nutrition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/descr"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:gravity="center">

        <TextView
            android:id="@+id/protein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="80dp"
            android:fontFamily="@font/ubuntu_medium"
            android:text="text"
            android:textColor="@android:color/holo_red_light"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/fats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/protein"
            android:layout_marginRight="40dp"
            android:fontFamily="@font/ubuntu_medium"
            android:text="text"
            android:textColor="@android:color/holo_red_light"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/carbonohydrates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/fats"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/ubuntu_medium"
            android:text="text"
            android:textColor="@android:color/holo_red_light"
            android:textSize="30sp" />

    </LinearLayout>

    <Button
        android:id="@+id/order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/price"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_add_background"
        android:text="@string/btn_add"
        android:textColor="@color/white" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/white"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/menu_navigation" />


</RelativeLayout>




