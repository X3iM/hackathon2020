<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".activities.DishActivity">



            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/imageDish"
                android:src="@drawable/meet"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/imageDish"
                android:text="text"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:layout_margin="10dp"
                android:fontFamily="@font/ubuntu_medium"
                android:id="@+id/nameDish"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_below="@+id/nameDish"
                android:text="text"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="@font/ubuntu_medium"
                android:layout_margin="10dp"
                android:id="@+id/descr"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="302dp"
                android:layout_below="@+id/nutrition"
                android:text="text"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_margin="10dp"
                android:fontFamily="@font/ubuntu_medium"
                android:id="@+id/kcal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="50dp"
                android:layout_below="@+id/nutrition"
                android:text="@string/kcalString"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_margin="10dp"
                android:fontFamily="@font/ubuntu_medium"
                android:id="@+id/kcalText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/kcal"
                android:text="text"
                android:textColor="@android:color/holo_red_light"
                android:textSize="30sp"
                android:layout_margin="10dp"
                android:fontFamily="@font/ubuntu_medium"
                android:id="@+id/price"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/descr"
                android:gravity="center"
                android:id="@+id/nutrition"
                android:layout_margin="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="text"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="30sp"
                    android:layout_marginRight="80dp"
                    android:fontFamily="@font/ubuntu_medium"
                    android:id="@+id/protein"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/protein"
                    android:text="text"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="30sp"
                    android:layout_marginRight="40dp"
                    android:fontFamily="@font/ubuntu_medium"
                    android:id="@+id/fats"/>

                <TextView
                    android:id="@+id/carbonohydrates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/fats"
                    android:layout_marginLeft="30dp"
                    android:text="text"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="30sp"
                    android:fontFamily="@font/ubuntu_medium" />
</LinearLayout>


    <Button
        android:id="@+id/order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/price"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_add_background"
        android:text="@string/btn_add"
        android:textColor="@color/white" />
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        app:labelVisibilityMode="unlabeled"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation"
        app:itemBackground="@color/white"
        app:itemTextColor="@color/bottom_nav_color"
        app:itemIconTint="@color/bottom_nav_color"
        app:menu="@menu/menu_navigation"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>




