<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink_orange"
    tools:context=".activities.LoginActivity">

    <ImageView
        android:id="@+id/logo_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/restaurant" />

    <TextView
        android:id="@+id/app_name"
        android:layout_below="@+id/logo_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name"
        android:textSize="35sp"
        android:textColor="@color/white"
        android:fontFamily="@font/ubuntu"

        />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_name"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="30dp"
        android:padding="8dp"
        android:hint="Your name"
        android:inputType="text"
        android:textSize="18sp"
        android:background="@drawable/input_field"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_100"
        />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="15dp"
        android:padding="8dp"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:textSize="18sp"
        android:background="@drawable/input_field"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_100"
        />

    <EditText
        android:id="@+id/password_registr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/room"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="15dp"
        android:padding="8dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="18sp"
        android:background="@drawable/input_field"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_100"
        />

    <EditText
        android:id="@+id/room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="15dp"
        android:padding="8dp"
        android:hint="Room"
        android:inputType="text"
        android:textSize="18sp"
        android:background="@drawable/input_field"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_100"
        />

    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="15dp"
        android:padding="8dp"
        android:hint="Phone"
        android:inputType="phone"
        android:textSize="18sp"
        android:background="@drawable/input_field"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_100"
        />



    <Button
        android:id="@+id/registr_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_registr"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="45dp"
        android:padding="22dp"

        android:background="@drawable/register_button"
        android:text="@string/btn_register"
        android:textColor="@color/white"
        />


</RelativeLayout>
